<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <p class="my-5"> <strong>Board:</strong> <%= @board.name %> </p>

    <div class="flex flex-row gap-7"
         data-controller="sortable"
         data-sortable-type-value="list">
      <% @board.lists.rank(:row_order).each do |list| %>
        <div id="<%= dom_id list %>" class="list" data-sortable-update-url="<%= list_path(list) %>">
          <p> <%= list.title %></p>
          <ul data-controller="sortable"
              data-sortable-list-id="<%= list.id %>"
              data-sortable-group-value="cards"
              data-sortable-type-value="card">
              <% list.cards.rank(:row_order).each do |card| %>
                <li id="<%= dom_id card %>" class="card"
                                            data-sortable-update-url="<%= card_path(card) %>">
                                            <p><%= card.title %></p>
                                            <p>card id: <%= card.id %></p>
                </li>
              <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <%= link_to"Edit this board", edit_board_path(@board), class:"mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to"Destroy this board", board_path(@board), method: :delete, class:"mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to"Back to boards", workspace_boards_path(@board.workspace), class:"ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
