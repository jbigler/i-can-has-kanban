<div id="<%= dom_id card %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Position:</strong>
    <%= card.position %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">List:</strong>
    <%= card.list_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= card.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= card.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this card", card, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this card", edit_card_path(card), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
